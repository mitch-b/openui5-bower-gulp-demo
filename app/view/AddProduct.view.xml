<mvc:View
        controllerName="demo.view.AddProduct"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:l="sap.ui.layout"
        xmlns:f="sap.ui.layout.form"
        xmlns:c="sap.ui.core"
        xmlns="sap.m">
    <Page
            class="sapUiFioriObjectPage"
            title="{i18n>addProductTitle}">
        <c:Fragment fragmentName="demo.view.fragments.ProductForm" type="XML"/>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="Save" type="Emphasized" press="onSave"/>
                <Button text="Cancel" press="onCancel"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>