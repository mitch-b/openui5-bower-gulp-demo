<c:FragmentDefinition
  xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:c="sap.ui.core"
	xmlns="sap.m">
		<l:Grid
			defaultSpan="L12 M12 S12"
			width="auto">
			<l:content>
				<f:SimpleForm
					id="idAddEventForm"
					minWidth="800"
					maxContainerCols="2"
					editable="true"
					layout="ResponsiveGridLayout"
					labelSpanL="3"
					labelSpanM="3"
					emptySpanL="4"
					emptySpanM="4"
					columnsL="1"
					columnsM="1"
					class="editableForm">
					<f:content>
						<!-- Basic info -->
						<c:Title text="Event Information" />
						<Label id="labelEVENT_NAME" text="{i18n>EVENT_NAME}" required="true" />
						<Input 
							id="inputEVENT_NAME" 
							value="{newEvent>/EVENT_NAME}" 
							placeholder="{i18n>EVENT_NAME_placeholder}"
							maxLength="20" 
							liveChange="validate_Populated">
						</Input>
						
						<Label id="labelEventType" text="{i18n>EVENT_TYPE_ID}" required="true" />
						<Select
							id="selectEventType"
							items="{/EventTypes}"
							change="onEventTypeChange"
							selectedKey="{newEvent>/EVENT_TYPE_ID}"
							width="100%">
							<c:Item key="{EVENT_TYPE_ID}" text="{DESCRIPTION}" />
						</Select>
						
						<Label id="cag_labelStatus" text="{i18n>STATUS_ID}" required="true" />
						<Select
							id="selectStatus"
							items="{/Statuses}"
							selectedKey="{newEvent>/STATUS_ID}"
							width="100%">
							<c:Item key="{STATUS_ID}" text="{DESCRIPTION}" />
						</Select>
						
						<Label id="labelCUSTOMER_ID" text="{i18n>CUSTOMER_ID}" required="true" />
						<Input 
							id="inputCUSTOMER_ID" 
							type="Text" 
							value="{newEvent>/CUSTOMER_ID}" 
							maxLength="18" 
							suggest="customerSuggest"
							liveChange="validate_Populated"
							showValueHelp="true"
							valueHelpRequest="customerValueHelp"
							showSuggestion="true">
						</Input>
						<Input id="descriptionCUSTOMER_ID" enabled="true" editable="false" value="-" />
						
						<Label id="labelOLD_MATERIAL" text="{i18n>OLD_MATERIAL}" required="true" />
						<Input 
							id="inputOLD_MATERIAL" 
							value="{newEvent>/OLD_MATERIAL}" 
							maxLength="18" 
							showSuggestion="true" 
							suggest="materialSuggest" 
							showValueHelp="true"
							valueHelpRequest="productValueHelp"
							liveChange="validate_Populated" />
						<Input id="descriptionOLD_MATERIAL" enabled="true" editable="false" value="-" />
						
						<Label for="inputOLD_UPC" id="labelOLD_UPC" class="cagHideable" text="{i18n>OLD_UPC}" />
						<Input id="inputOLD_UPC" class="cagHideable" value="{newEvent>/OLD_UPC}" maxLength="18" />

						<Label id="labelNEW_MATERIAL" class="cagHideable" text="{i18n>NEW_MATERIAL}" />
						<Input id="inputNEW_MATERIAL" 
							class="cagHideable" 
							value="{newEvent>/NEW_MATERIAL}" 
							showSuggestion="true" 
							suggest="materialSuggest" 
							showValueHelp="true"
							valueHelpRequest="productValueHelp"
							maxLength="18" />
						<Input id="descriptionNEW_MATERIAL" class="cagHideable" enabled="true" editable="false" value="-" />
						
						<Label id="labelNEW_UPC" class="cagHideable" text="{i18n>NEW_UPC}" />
						<Input id="inputNEW_UPC" class="cagHideable" value="{newEvent>/NEW_UPC}" maxLength="18" />
						
						<Label id="labelSTART_DATE" class="cagHideable" text="{i18n>START_DATE}" />
						<DatePicker
							id="inputSTART_DATE" 
							class="cagHideable"
							displayFormat="MM/dd/yyyy"
							dateValue="{newEvent>/START_DATE}" />
							
						<Label id="labelEND_DATE" class="cagHideable" text="{i18n>END_DATE}" />
						<DatePicker
							id="inputEND_DATE"
							class="cagHideable"
							displayFormat="MM/dd/yyyy" 
							dateValue="{newEvent>/END_DATE}" />
							
						<Label id="labelVOLUME_PCT" class="cagHideable" text="{i18n>VOLUME_PCT}" />
						<Input id="inputVOLUME_PCT" class="cagHideable" value="{newEvent>/VOLUME_PCT}" />
						
						<Label id="labelOLD_PRICE" class="cagHideable" text="{i18n>OLD_PRICE}" />
						<Input id="inputOLD_PRICE" class="cagHideable" placeholder="{i18n>pricePlaceholder}" value="{newEvent>/OLD_PRICE}" />
						
						<Label id="labelNEW_PRICE" class="cagHideable" text="{i18n>NEW_PRICE}" />
						<Input id="inputNEW_PRICE" class="cagHideable" placeholder="{i18n>pricePlaceholder}" value="{newEvent>/NEW_PRICE}" />
						
						<Label id="labelPIPE_SHIP_WKS" class="cagHideable" text="{i18n>PIPE_SHIP_WKS}" />
						<Input id="inputPIPE_SHIP_WKS" class="cagHideable" value="{newEvent>/PIPE_SHIP_WKS}" />
						
						<Label id="labelPIPE_WOS" class="cagHideable" text="{i18n>PIPE_WOS}" />
						<Input id="inputPIPE_WOS" class="cagHideable" value="{newEvent>/PIPE_WOS}" />
						
						<Label id="labelCOMMENTS" class="cagHideable" text="{i18n>COMMENTS}" />
						<TextArea id="inputCOMMENTS" class="cagHideable" value="{newEvent>/COMMENTS}" maxLength="50" />
					</f:content>
				</f:SimpleForm>
			</l:content>
		</l:Grid>
</c:FragmentDefinition>